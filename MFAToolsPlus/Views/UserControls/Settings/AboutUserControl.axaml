<?xml version="1.0" encoding="UTF-8" ?>
<UserControl d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d"
             x:DataType="pages:SettingsViewModel"
             x:Class="MFAToolsPlus.Views.UserControls.Settings.AboutUserControl"
             xmlns="https://github.com/avaloniaui"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helper="clr-namespace:MFAToolsPlus.Helper"
             xmlns:markup="https://codewf.com"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:suki="https://github.com/kikipoulet/SukiUI"
             xmlns:utilities="clr-namespace:MFAToolsPlus.Utilities"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:pages="clr-namespace:MFAToolsPlus.ViewModels.Pages"
             xmlns:full="https://github.com/whistyun/Markdown.Avalonia"
             xmlns:extensions="clr-namespace:MFAToolsPlus.Extensions"
             xmlns:fluent="clr-namespace:FluentIcons.Avalonia.Fluent.Markup;assembly=FluentIcons.Avalonia.Fluent">
    <StackPanel Spacing="10">

        <suki:GlassCard Padding="25,8,25,8">
            <DockPanel>
                <Button BorderBrush="Transparent"
                        BorderThickness="0"
                        Click="ClearCache_Click"
                        Content="{fluent:FluentIcon Icon=Send,
                                                          IconSize=Size16}"
                        DockPanel.Dock="Right"
                        Height="40"
                        HorizontalAlignment="Center"
                        Margin="0,0,4,0" />
                <StackPanel HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock FontSize="16"
                               FontWeight="SemiBold"
                               Text="{markup:I18n {x:Static helper:LangKeys.ClearCache}}"
                               VerticalAlignment="Center" />
                </StackPanel>
            </DockPanel>
        </suki:GlassCard>
        <suki:GlassCard Padding="25,8,25,8">
            <DockPanel>
                <Button BorderBrush="Transparent"
                        BorderThickness="0"
                        Command="{x:Static utilities:UrlUtilities.OpenLink}"
                        CommandParameter="{x:Static helper:MFAUrls.GitHub}"
                        Content="{fluent:FluentIcon Icon=Send,
                                                          IconSize=Size16}"
                        DockPanel.Dock="Right"
                        Height="40"
                        HorizontalAlignment="Center"
                        Margin="0,0,4,0" />
                <StackPanel HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock FontSize="16"
                               Margin="5,0"
                               FontWeight="SemiBold"
                               Text="UI"
                               VerticalAlignment="Center" />
                    <TextBlock FontSize="16"
                               FontWeight="SemiBold"
                               Text="{markup:I18n {x:Static helper:LangKeys.Github}}"
                               VerticalAlignment="Center" />
                </StackPanel>
            </DockPanel>
        </suki:GlassCard>
        <suki:GlassCard Padding="25,8,25,8">
            <DockPanel>
                <Button BorderBrush="Transparent"
                        BorderThickness="0"
                        Command="{x:Static utilities:UrlUtilities.OpenLink}"
                        CommandParameter="{x:Static helper:MFAUrls.GitHubIssues}"
                        Content="{fluent:FluentIcon Icon=Send,
                                                          IconSize=Size16}"
                        DockPanel.Dock="Right"
                        Height="40"
                        HorizontalAlignment="Center"
                        Margin="0,0,4,0" />
                <StackPanel HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock FontSize="16"
                               FontWeight="SemiBold"
                               Text="UI"
                               Margin="5,0"
                               VerticalAlignment="Center" />
                    <TextBlock FontSize="16"
                               FontWeight="SemiBold"
                               Text="{markup:I18n {x:Static helper:LangKeys.Issue}}"
                               VerticalAlignment="Center" />
                </StackPanel>
            </DockPanel>
        </suki:GlassCard>
    </StackPanel>
</UserControl>